@page
@model RentCargoBus.Web.Areas.Identity.Pages.Account.Manage.AddVanModel
@{
    ViewData["Title"] = "Add Van";
}

<section class="c-admin">
    <h2>Add new van</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Model.Brand"></label>
            <input asp-for="Model.Brand" placeholder="Марка" class="form-control form-control-sm" />
            <span asp-validation-for="Model.Brand" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model.Model"></label>
            <input asp-for="Model.Model" value="" placeholder="Модел" class="form-control form-control-sm" />
            <span asp-validation-for="Model.Model" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model.PlateNumber"></label>
            <input asp-for="Model.PlateNumber" placeholder="Регистрационен номер" class="form-control form-control-sm" />
            <span asp-validation-for="Model.PlateNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model.Weight"></label>
            <input asp-for="Model.Weight" placeholder="Маса на буса в килограми" class="form-control form-control-sm" />
            <span asp-validation-for="Model.Weight" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model.Height"></label>
            <input asp-for="Model.Height" placeholder="Височина на буса в метри" class="form-control form-control-sm" />
            <span asp-validation-for="Model.Height" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model.MaxLoad"></label>
            <input asp-for="Model.MaxLoad" min="1" max="10000" placeholder="Товаримост в килограми" class="form-control form-control-sm" />
            <span asp-validation-for="Model.MaxLoad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model.Seats"></label>
            <input asp-for="Model.Seats" min="1" placeholder="Брой врати" class="form-control form-control-sm" />
            <span asp-validation-for="Model.Seats" class="text-danger"></span>
            <small>Only for passenger van.</small>
        </div>

        <div class="form-group">
            <label asp-for="Model.HirePrice"></label>
            <input asp-for="Model.HirePrice" value="" placeholder="Цена за ден" class="form-control form-control-sm" />
            <span asp-validation-for="Model.HirePrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model.Type">Van type</label>
            <select class="form-control-sm" asp-for="Model.Type">
                <option value="2">Passenger</option>
                <option value="1">Cargo</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Model.Images">Select files:</label>
            <input asp-for="Model.Images" type="file" multiple><br><br>
        </div>

        <button type="submit" class="btn btn-admin">Save</button>
    </form>
</section>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
    <li class="nav-item">
        <a class="nav-link nav-item__link"
           asp-area="Identity"
           asp-page="/Account/Manage/Index"
           title="Manage">
            <i class="fas fa-users-cog"></i>@User.Identity.Name
        </a>
    </li>

    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-outline-info btn-sm">Logout</button>
        </form>
    </li>
    }
    else
    {
    <li class="nav-item">
        <a class="btn btn-admin btn-outline-info" asp-area="Identity" asp-page="/Account/Login">Admin</a>
    </li>
    }
</ul>

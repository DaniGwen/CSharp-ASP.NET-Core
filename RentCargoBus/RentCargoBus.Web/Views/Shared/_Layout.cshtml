<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentAVan</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <link href="~/css/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Styles/styles.css" />
</head>
<body>
    <div class="c-layout-main-grid">
        <header class="header">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    @*<div class="header__logo-wrapper">
                        <img class="header__logo" src="" alt="site logo" />
                    </div>*@
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Rent a Van</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="c-navbar navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav">
                            <li>
                                <a class="nav-link" asp-action="index" asp-controller="Home">Home</a>
                            </li>
                            <li class="c-navbar__item">
                                <label class="c-navbar__item__language">
                                    <input type="checkbox" data-toggle="toggle" data-on="Fr" data-off="En">
                                </label>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main class="main">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </main>

        <footer class="footer text-muted">
            <div class="footer__stripe"></div>
            <div class="container">
                &copy; 2020 - RentCargoBus.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script src="~/lib/jquery/dist/custom.js"></script>
    
    @*Resolves conflict between BOOTSTRAP buttons and jQUERY UI buttons*@
    <script type="text/javascript">
        $.fn.bootstrapBtn = $.fn.button.noConflict();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

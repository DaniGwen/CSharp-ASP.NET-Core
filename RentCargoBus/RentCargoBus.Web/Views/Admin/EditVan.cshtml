@model RentCargoBus.Web.Models.EditViewModels.VanEditViewModel

@{
    ViewData["Title"] = "EditVan";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int index = 0;
}

<h1>Edit Van</h1>

<hr />
<form asp-action="EditVan" method="post" enctype="multipart/form-data">
    <article class="edit-van">
        <section class="edit-van__info">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VanId" />
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlateNumber" class="control-label"></label>
                <input asp-for="PlateNumber" class="form-control" />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxLoad" class="control-label"></label>
                <input asp-for="MaxLoad" class="form-control" />
                <span asp-validation-for="MaxLoad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HirePrice" class="control-label"></label>
                <input asp-for="HirePrice" class="form-control" />
                <span asp-validation-for="HirePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="1">Cargo</option>
                    <option value="2">Passenger</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAvailable" class="control-label"></label>
                <select asp-for="IsAvailable" class="form-control">
                    <option value="0">Not Available</option>
                    <option value="1">Available</option>
                </select>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images">Select files:</label>
                <input asp-for="Images" type="file" multiple><br><br>
            </div>
        </section>

        <section class="edit-van__images">
            @foreach (var img in Model.Images)
            {
                <div class="edit-van__image-wrapper">
                    <img class="edit-van__image" src="~/images/@img.ImageName" alt="van image" />
                    <label>Delete</label>
                    <input type="checkbox" name="image[]" value="@img.ImageId" />
                </div>
            }
        </section>
    </article>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="Home">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

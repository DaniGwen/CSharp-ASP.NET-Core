@model RentCargoBus.Web.Models.EditViewModels.CarEditViewModel

@{
    ViewData["Title"] = "EditCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Car</h1>

<hr />
<form asp-controller="Admin" asp-action="EditCar" enctype="multipart/form-data">
    <article class="edit-vehicle">
        <section class="edit-vehicle__info">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" />
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" autofocus/>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlateNumber" class="control-label"></label>
                <input asp-for="PlateNumber" class="form-control" />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MilesPerGallon" class="control-label"></label>
                <input asp-for="MilesPerGallon" class="form-control" />
                <span asp-validation-for="MilesPerGallon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doors" class="control-label"></label>
                <input asp-for="Doors" class="form-control" />
                <span asp-validation-for="Doors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HirePrice" class="control-label"></label>
                <input asp-for="HirePrice" class="form-control" />
                <span asp-validation-for="HirePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAvailable" class="control-label"></label>
                <select asp-for="IsAvailable" class="form-control">
                    <option value="0">Not Available</option>
                    <option value="1">Available</option>
                </select>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images">Select images:</label>
                <input asp-for="Images" type="file" multiple><br><br>
            </div>
        </section>

        <section class="edit-vehicle__images">
            @if (Model.Images.Count > 0)
            {
                @foreach (var img in Model.Images)
                {
                    <article class="edit-vehicle__image-container">
                        <div class="edit-vehicle__image-wrapper">
                            <img class="edit-vehicle__image" src="~/images/@img.ImageName" alt="car image" />
                        </div>
                        <i class="edit-vehicle__images__delete-icon fas fa-trash-alt"></i>
                        <input class="edit-vehicle__images__checkbox"
                               type="checkbox"
                               name="imagesToDelete[]"
                               value="@img.ImageId" />
                    </article>
                }
            }
            else
            {
                <p>No images to display.</p>
            }
        </section>
    </article>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a class="back-to-index" asp-controller="Home" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

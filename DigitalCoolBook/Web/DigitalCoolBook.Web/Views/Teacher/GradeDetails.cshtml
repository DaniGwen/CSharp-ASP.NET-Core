@model IEnumerable<DigitalCoolBook.App.Models.GradesViewModels.GradeDetailViewModel>

@{
    ViewData["Title"] = "GradeDetails";
    Layout = "_Layout";
}
<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <h3>Class @ViewData["paraleloName"]</h3>
    <hr/>
    @if (!Model.Any())
    {
        <h5>No students in this class...</h5>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="mb-2">
                <a class="w-100 btn btn-outline-primary"
                   asp-controller="Student"
                   asp-action="Details"
                   asp-route-id="@item.Id">@item.Name</a>
            </div>
        }
    }
    <a class="btn btn-outline-secondary btn-sm" asp-controller="Teacher" asp-action="AssignedGrades">Back</a>
</div>



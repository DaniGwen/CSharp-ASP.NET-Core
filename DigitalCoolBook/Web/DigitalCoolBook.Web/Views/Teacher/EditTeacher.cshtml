@model DigitalCoolBook.App.Models.TeacherViewModels.TeacherDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutMenus";
}
<style>
    .myOrangeButton {
        background: #ffb74d;
    }
</style>

<h2 class="text-center">Редактиране на профил</h2>

<hr />
<form asp-action="EditTeacher" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Име</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Имейл</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label">Дата на раждане</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="datepicker" name="dateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger" id="alertDatepicker"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PlaceOfBirth" class="col-sm-2 col-form-label">Място на раждане</label>
        <div class="col-sm-10">
            <input asp-for="PlaceOfBirth" class="form-control" />
            <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Sex" class="col-sm-2 col-form-label">Пол</label>
        <div class="col-sm-10">
            <select class="form-control" name="sex" id="sex">
                <option value="Мъж">Мъж</option>
                <option value="Жена">Жена</option>
                <option value="Друго">Друго</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MobilePhone" class="col-sm-2 col-form-label">Мобилен телефон</label>
        <div class="col-sm-10">
            <input asp-for="MobilePhone" min="0" class="form-control w-100" type="tel" />
            <span asp-validation-for="MobilePhone" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Telephone" class="col-sm-2 col-form-label">Домашен телефон</label>
        <div class="col-sm-10">
            <input asp-for="Telephone" min="0" class="form-control w-100" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Запиши" class="btn btn-block myOrangeButton" />
        <a class="btn btn-block btn-outline-dark" asp-action="EditTeachers">Назад</a>
    </div>
</form>

<!--setting datepicker and validating DateOfBirth input-->
<script type="text/javascript">
    $.datepicker.setDefaults($.datepicker.regional["bg"]);
    $.datepicker.setDefaults({
        changeMonth: true,
        changeYear: true,
        showButtonPanel: true,
        dateFormat: "dd.M.yy",
    });

    $(function () {
        $('#datepicker').datepicker();
    });

    $(function () {
        $('form').on('submit', function (event) {
            if ($('#datepicker').val() == '') {
                event.preventDefault();
                $('#alertDatepicker').html("Попълнете дата на раждане.").fadeToggle(4000);
            }
        })
    })
</script>



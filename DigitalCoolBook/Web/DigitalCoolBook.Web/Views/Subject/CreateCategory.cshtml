@model DigitalCoolBook.Web.Models.CategoryViewModels.CategoryAdminCreateViewModel

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "_Layout";
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <h3>Create category</h3>
    <hr />
    <form asp-action="CreateCategory" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="form-label">Subject</label>
            @Html.DropDownListFor(model => model.SubjectId, new SelectList(Model.Subjects, "SubjectId", "Name"), "Select subject", new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(m => m.SubjectId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mt-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input id="title" asp-for="Title" class="form-control form-control-sm" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="buttons-wrapper mt-4 mb-4">
            <a asp-controller="Admin"
               asp-action="AdminPanel"><i class="fas fa-lg fa-arrow-circle-left"></i></a>

            <a class="btn btn-success btn-sm" id="submit">Create</a>
        </div>
    </form>
</div>

<div id="successMessage"></div>
<div id="errorMessageDialog"></div>

@section Scripts{
    <script>
        $(function () {
            $("#submit").click(function () {
                $.ajax({
                    url: "/Subject/CreateCategory/",
                    type: "POST",
                    data:
                    {
                        SubjectId: $("#SubjectId").val(),
                        Title: $("#title").val()
                    },
                    success: function (redirect) {
                        $("#successMessage").dialog(
                            {
                                modal: true,
                                buttons: {
                                    "Ок": function () {
                                        $(this).dialog("close", location.href = redirect);
                                    }
                                }
                            });
                        $("#successMessage").dialog({ title: "Success" });
                        $("#successMessage").html("Category created successfully");
                    },
                    error: function (request, err, message) {
                        $("#errorMessageDialog").dialog({
                            modal: true,
                            buttons: {
                                "Close": function () {
                                    $(this).dialog("close");
                                }
                            }
                        });
                        $('#errorMessageDialog').dialog({ title: 'Warning' });
                        $("#errorMessageDialog").html("Please select Subject and enter Title");
                    }
                });
            });
        })
    </script>
}

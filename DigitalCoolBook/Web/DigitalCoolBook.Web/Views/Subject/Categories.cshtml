@model DigitalCoolBook.App.Models.SubjectViewModels.SubjectViewModel

@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="link-lg" asp-action="Subjects">Subjects</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Categories</li>
        </ol>
    </nav>

    <div class="page-wrapper">
        <h3>@Model.Name</h3>
        <hr/>
        <div class="mb-3">
            @if (Model.Categories.Count == 0)
            {
                <h5>No categories for this subject...</h5>
            }
            else
            {
                @foreach (var category in Model.Categories)
                {
                    <a class="link-lg text-center mt-3 d-block"
                       href="@Url.Action("Lessons", "Subject", new {categoryId = category.Id, categoryTitle = category.Title, subjectId = category.SubjectId})">
                        @category.Title
                    </a>
                }
            }
        </div>
    </div>

    <div class="buttons-wrapper">
        <a href="@Url.Action("Subjects", "Subject")"><i class="fas fa-lg fa-arrow-circle-left"></i></a>
    </div>
</div>
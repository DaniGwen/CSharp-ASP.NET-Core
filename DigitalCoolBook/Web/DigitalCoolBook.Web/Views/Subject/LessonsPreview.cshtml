@model IEnumerable<DigitalCoolBook.App.Models.CategoryViewModels.LessonPreviewViewModel>

@{
    ViewData["Title"] = "LessonsPreview";
    Layout = "_Layout";
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <div class="page-wrapper">
        <h3>Topics overview</h3>
        <hr />
        @foreach (var item in Model)
        {
            <div class="row mb-2 align-items-baseline">
                <div class="col">
                    <p id="lessonDetails">@item.Title</p>
                </div>
                <div class="col buttons-wrapper">
                    <a class="btn btn-sm btn-warning" href="/Subject/EditLesson/@item.LessonId">Edit</a>
                    <a class="btn btn-sm btn-danger" onclick="Delete(this)" id="delete" value="@item.LessonId">Delete</a>
                </div>
            </div>
        }
    </div>
    <div class="buttons-wrapper mt-4 mb-4">
        <a asp-controller="Admin"
           asp-action="AdminPanel"><i class="fas fa-lg fa-arrow-circle-left"></i></a>
        <a class="btn btn-success btn-sm" asp-action="AddLesson"><i class="fas fa-plus"></i> Topic</a>
    </div>
</div>

<div id="dialog"></div>
<div id="dialog-confirm"></div>

@section Scripts{
    <script>
        // Open dialog and delete lesson on confirmation
        function Delete(elem) {
            $('#dialog').html("Remove topic?");
            $('#dialog').dialog({
                title: "Delete",
                modal: true,
                buttons: {
                    "Back": function () {
                        $(this).dialog('close');
                    },
                    "Delete": function () {
                        $.post("/Subject/RemoveLesson", { lessonId: $(elem).attr('value') });
                        $(this).dialog('close', location.href = "/Subject/LessonsPreview");
                    }
                }
            });
        };
    </script>
}


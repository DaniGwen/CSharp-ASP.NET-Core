@model DigitalCoolBook.App.Models.CategoryViewModels.CategoryCreateViewModel

@{
    ViewData["Title"] = "Add Lesson";
    Layout = "_LayoutMenus";
}

<h3 class="text-center DCB-text mt-2 ">Add lesson theme</h3>
<br />
<div class="container-fluid w-75">
    <form>
        <div class="col form-group">
            <label class="col-form-label-lg">Choose subject</label>
            @Html.DropDownListFor(model => model.SubjectId, new SelectList(Model.Subjects, "SubjectId", "Name"), "Subject...", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SubjectId, "", new { @class = "text-danger" })
            <small>In this section you can add or delete existing subject</small>
            <div class="row mt-3 form-group">
                <a href="/Subject/CreateSubject" class="btn btn-sm btn-outline-secondary form-group">Add subject</a>
                <a href="#" id="deleteSubject" class="btn btn-sm btn-outline-danger ml-2 form-group">Delete subject</a>
            </div>
        </div>
        <hr />
        <div class="col form-group">
            <label class="col-form-label-lg">Choose section</label>
            @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.Categories, "Id", "Title"), "Section...", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
            <small>You can add new section or remove existing from the menu</small>
            <div class="row mt-3 form-group">
                <a href="/Subject/CreateCategory" class="btn btn-sm btn-outline-secondary">Add section</a>
                <a href="#" id="deleteCategory" class="btn btn-sm btn-outline-danger ml-2">Delete section</a>
            </div>
        </div>
        <hr />
        <div class="mb-2">
            <small class="mb-3 my-info-text text-sm-left">
                The higher the level of access more tests need to be passed successfully in ordedr to access it.
                All lesson themes with access level > 1 will be accessible only when the average score is >= 70 points.
            </small>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Access level</label>
            </div>
            <select class="custom-select" id="inputGroupSelect01">
                <option selected></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
        <span class="text-danger" id="alertLevel"></span>
        <hr />
        <div>
            <label for="title" class="gj-font-size-16">Theme</label>
            <input type="text" class="form-control" id="title" name="title" />
            <span class="row text-danger ml-2 mb-1" id="alertTitle"></span>
            <label for="content" class="gj-font-size-16">Content</label>
            <textarea class="form-control" id="content" name="content" rows="10"></textarea>
            <span class="text-danger" id="alertContent"></span>
        </div>
        <div class="d-flex justify-content-end mt-2">
            <a class="btn btn-sm btn-outline-info form-group w-25" data-toggle="tooltip" data-placement="bottom" title="Overview and edit all lesson themes" href="/Subject/LessonsPreview">Themes overview</a>
        </div>
        <div class="row form-group mt-2 d-flex justify-content-between">
            <a class="mb-2" href="/Admin/AdminPanel">Back</a>
            <input type="submit" value="Запази" class="btn btn-outline-secondary form-group ml-3" />
        </div>
    </form>
</div>


<div id="successMessage"></div>
<div id="errorMessage" title="Error"></div>


@section Scripts{
    @*Updates Category according Subject selection*@
    <script>
        var categoryDropDown = $('#CategoryId'); // cache variable
        $('#SubjectId').change(function () {
            var subjectId = $(this).val();
            categoryDropDown.empty(); // clear existing options
            if (!subjectId) {
                return; // exit if null
            }
            $.ajax({
                type: "POST",
                url: "/Subject/GetCategories",
                data: { subjectId: subjectId }, // sends subjectId to the action
                success: function (response) {
                    categoryDropDown.append($('<option></option>').val('').text('Choose section')); // add a default null option
                    $.each(response,
                        function (i, item) {
                            categoryDropDown.append($('<option></option>').val(item.id).text(item.title));
                        });
                }
            });
        });
    </script>

    @*Deletes choosen Category*@
    <script>
        $(function () {
            $("#deleteCategory").click(function () {
                var categoryId = $('#CategoryId').val();
                $("#successMessage").dialog(
                    {
                        resizable: false,
                        height: 200,
                        width: 300,
                        modal: true,
                        buttons: {
                            "Delete": function () {
                                $.ajax({
                                    type: "POST",
                                    url: "/Subject/RemoveCategory",
                                    data: { categoryId: categoryId },
                                    success: function () {
                                        $("#successMessage").dialog(
                                            {
                                                resizable: false,
                                                height: 200,
                                                width: 300,
                                                modal: true,
                                                buttons:
                                                {
                                                    "Close": function () {
                                                        $(this).dialog("close", location.href = "/Subject/AddLesson");
                                                    }
                                                }
                                            });
                                        $("#successMessage").html("Section is deleted!");
                                    },
                                    error: function (request, err, message) {
                                        $("#errorMessage").dialog({
                                            maxHeight: 290,
                                            width: 600,
                                            modal: true,
                                            buttons:
                                            {
                                                "Close": function () {
                                                    $(this).dialog("close");
                                                }
                                            }
                                        });
                                        $("#errorMessage").html(request.responseText);
                                    }
                                });
                            },
                            "Cancel": function () {
                                $(this).dialog("close");
                            }
                        }
                    });
                $("#successMessage").html("Delete section?");
            });
        })
    </script>

    @*Delete choosen Subject*@
    <script>
        $(function () {
            $("#deleteSubject").click(function () {
                var subjectId = $('#SubjectId').val();
                $("#successMessage").dialog(
                    {
                        resizable: false,
                        height: 200,
                        width: 300,
                        modal: true,
                        buttons: {
                            "Delete": function () {
                                $.ajax({
                                    type: "POST",
                                    url: "/Subject/RemoveSubject",
                                    data: { subjectId: subjectId },
                                    success: function () {
                                        $("#successMessage").dialog(
                                            {
                                                resizable: false,
                                                height: 200,
                                                width: 300,
                                                modal: true,
                                                buttons: {
                                                    "Close": function () {
                                                        $(this).dialog("close", location.href = "/Subject/AddLesson");
                                                    }
                                                }
                                            });
                                        $("#successMessage").html("Subject deleted!");
                                    },
                                    error: function (request, err, message) {
                                        $("#errorMessage").dialog({
                                            maxHeight: 290,
                                            width: 600,
                                            modal: true,
                                            buttons: {
                                                "Close": function () {
                                                    $(this).dialog("close");
                                                }
                                            }
                                        });
                                        $("#errorMessage").html(request.responseText);
                                    }
                                });
                            },
                            "Cancel": function () {
                                $(this).dialog("close");
                            }
                        }
                    });
                $("#successMessage").html("Delete subject?");
            });
        })
    </script>
    
    @*Submit form and display Popup*@
    <script>
        $('form').on('submit',
            function (event) {

                // validation for title and contend
                if ($('#title').val() === '') {
                    $('#alertTitle').html("Enter title").fadeToggle(4000);
                    return false;
                }
                if ($('#content').val() === '') {
                    $('#alertContent').html("Enter content").fadeToggle(4000);
                    return false;
                }
                if ($('#inputGroupSelect01').val() === '') {
                    $('#alertLevel').html('Select from the menu');
                    return false;
                }

                event.preventDefault();

                var categoryId = $('#CategoryId').val();
                var title = $('#title').val();
                var content = $('#content').val();
                var level = $('#inputGroupSelect01').val();

                $.post("/Subject/AddLesson",
                    { categoryId: categoryId, title: title, content: content, level: level },
                    function (message) {
                        $('#successMessage').dialog({
                            resizable: false,
                            height: 200,
                            width: 300,
                            modal: true,
                            buttons: {
                                "Ok": function () {
                                    $(this).dialog('close', location.href = "/Subject/AddLesson");
                                }
                            }
                        });
                        $('#successMessage').html(message);
                    });
            })
    </script>
}

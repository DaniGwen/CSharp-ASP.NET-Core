@model DigitalCoolBook.App.Models.SubjectViewModels.SubjectCreateViewModel

@{
    ViewData["Title"] = "CreateSubject";
    Layout = "_Layout";
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <h3>Create subject</h3>
    <hr />
    <form asp-action="CreateSubject">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control form-control-sm" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="buttons-wrapper mt-4 mb-4">
            <a asp-action="AddLesson"><i class="fas fa-lg fa-arrow-circle-left"></i></a>

            <input class="btn btn-outline-success btn-sm" type="submit" value="Create" />
        </div>
    </form>
</div>

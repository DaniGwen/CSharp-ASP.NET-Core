@model DigitalCoolBook.App.Models.SubjectViewModels.SubjectCreateViewModel

@{
    ViewData["Title"] = "CreateSubject";
    Layout = "_Layout";
}

<h3>Create subject</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSubject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="buttons-wrapper">
                <a class="btn btn-outline-secondary btn-sm" asp-action="AddLesson">Back</a>
                <input class="btn btn-outline-success btn-sm" type="submit" value="Create"/>
            </div>
        </form>
    </div>
</div>
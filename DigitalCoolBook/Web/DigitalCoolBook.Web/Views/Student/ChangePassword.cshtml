@model DigitalCoolBook.App.Models.StudentViewModels.StudentChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "_Layout";
}

<div class="container-fluid w-70">
    <h3>Change password</h3>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <hr />
            <form asp-action="ChangePassword">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row form-group">
                    <label class="font-weight-bold">@Model.Name</label>
                </div>
                <div class="row form-group">
                    <label class="font-weight-bold">@Model.Email</label>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-group">New password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-group">Confirm password</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <hr />
                <div class="buttons-wrapper">
                    <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="Index">Back</a>
                    <input class="btn btn-outline-success btn-sm" type="submit" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
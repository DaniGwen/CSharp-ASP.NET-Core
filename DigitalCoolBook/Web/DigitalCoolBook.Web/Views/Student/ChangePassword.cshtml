@model DigitalCoolBook.App.Models.StudentViewModels.StudentChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "_Layout";
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <h3>Change password</h3>
    <hr />
    <form asp-action="ChangePassword">
        <div class="row form-group">
            <label class="font-bold">@Model.Name</label>
        </div>
        <div class="row form-group mb-2">
            <label class="font-bold">@Model.Email</label>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-group">New password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="form-group">Confirm password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <hr />
        <div class="buttons-wrapper">
            <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="Index">Back</a>
            <input class="btn btn-outline-success btn-sm" type="submit" value="Save" />
        </div>
    </form>
</div>
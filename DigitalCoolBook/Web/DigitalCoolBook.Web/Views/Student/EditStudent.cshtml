@model DigitalCoolBook.App.Models.StudentViewModels.StudentEditViewModel

@{
    ViewData["Title"] = "EditStudent";
    Layout = "_LayoutMenus";
}

<style>
    .myOrangeButton {
        background: #ffb74d;
    }
</style>

<h2>Редакция на ученик</h2>
<hr />

<form asp-action="EditStudent">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Имейл</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Име</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Дата на раждане</label>
        <div class="col-sm-10">
            <input type="text" class="datepicker" id="datepicker" name="dateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger" id="alertDatepicker"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PlaceOfBirth" class="col-sm-2 col-form-label">Място на раждане</label>
        <div class="col-sm-10">
            <input asp-for="PlaceOfBirth" class="form-control" />
            <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Sex" class="col-sm-2 col-form-label">Пол</label>
        <div class="col-sm-10">
            <select class="form-control" name="sex" id="sex">
                <option value="Мъж">Мъж</option>
                <option value="Жена">Жена</option>
                <option value="Друго">Друго</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MobilePhone" class="col-sm-2 col-form-label">Мобилен телефон</label>
        <div class="col-sm-10">
            <input asp-for="MobilePhone" class="form-control w-100" />
            <span asp-validation-for="MobilePhone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Telephone" class="col-sm-2 col-form-label">Домашен телефон</label>
        <div class="col-sm-10">
            <input asp-for="Telephone" class="form-control w-100" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FatherName" class="col-sm-2 col-form-label">Име на баща</label>
        <div class="col-sm-10">
            <input asp-for="FatherName" class="form-control" />
            <span asp-validation-for="FatherName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MotherName" class="col-sm-2 col-form-label">Име на майка</label>
        <div class="col-sm-10">
            <input asp-for="MotherName" class="form-control" />
            <span asp-validation-for="MotherName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MotherMobileNumber" class="col-sm-2 col-form-label">Телефон на майка</label>
        <div class="col-sm-10">
            <input asp-for="MotherMobileNumber" class="form-control w-100" />
            <span asp-validation-for="MotherMobileNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FatherMobileNumber" class="col-sm-2 col-form-label">Телефон на баща</label>
        <div class="col-sm-10">
            <input asp-for="FatherMobileNumber" class="form-control w-100" />
            <span asp-validation-for="FatherMobileNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label">Адрес</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Клас</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.GradeId, new SelectList(Model.Grades, "GradeId", "Name"), new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Запази" class="btn btn-block myOrangeButton" />
    </div>
</form>
<a class="btn btn-block btn-outline-dark mb-2" asp-action="EditStudents">Назад</a>

<!--setting datepicker and validating DateOfBirth input-->
<script>
    $.datepicker.setDefaults($.datepicker.regional["bg"]);
    $.datepicker.setDefaults({
        changeMonth: true,
        changeYear: true,
        showButtonPanel: true,
        dateFormat: "dd.M.yy",
    });

    $(function () {
        $('#datepicker').datepicker();
    });

    $(function () {
        $('form').on('submit', function (event) {
            if ($('#datepicker').val() == '') {
                event.preventDefault();
                $('#alertDatepicker').html("Попълнете дата на раждане.").fadeToggle(4000);
            }
        })
    })
</script>
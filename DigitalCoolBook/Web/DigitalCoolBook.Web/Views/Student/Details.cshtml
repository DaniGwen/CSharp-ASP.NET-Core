@model DigitalCoolBook.App.Models.StudentViewModels.StudentDetailsViewModel

@{
    ViewData["Title"] = "DetailsAsync";
    Layout = "_Layout";
}

<div class="container-fluid w-70">
    <h3 style="color:dimgray">@Model.Name</h3>
    <div>
        <hr />
        <dl class="row d-flex justify-content-center">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Date Of Birth</dt>
            <dd class="col-sm-10">@Model.DateOfBirth</dd>

            <dt class="col-sm-2">Place Of Birth</dt>
            <dd class="col-sm-10">@Model.PlaceOfBirth</dd>

            <dt class="col-sm-2">MobilePhone</dt>
            <dd class="col-sm-10">@Model.MobilePhone)</dd>

            <dt class="col-sm-2">Telephone</dt>
            <dd class="col-sm-10">@Model.Telephone</dd>

            <dt class="col-sm-2">Father Name</dt>
            <dd class="col-sm-10">@Model.FatherName</dd>

            <dt class="col-sm-2">Mother Name</dt>
            <dd class="col-sm-10">@Model.MotherName</dd>

            <dt class="col-sm-2">Mother Mobile Number</dt>
            <dd class="col-sm-10">@Model.MotherMobileNumber</dd>

            <dt class="col-sm-2">Father Mobile Number)</dt>
            <dd class="col-sm-10">@Model.FatherMobileNumber)</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Address</dd>
        </dl>
        <hr />
    </div>
    <div class="mb-2">
        <a class="btn btn-outline-secondary" asp-controller="Teacher" asp-action="GradeDetails" asp-route-id="@Model.GradeId">Back</a>
    </div>
</div>

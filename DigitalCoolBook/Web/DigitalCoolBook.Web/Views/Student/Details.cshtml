@model DigitalCoolBook.Web.Models.StudentViewModels.StudentDetailsViewModel

@{
    ViewData["Title"] = "StudentDetails";
    Layout = "_Layout";
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="link-lg"
                   asp-controller="Subject"
                   asp-action="Subjects">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a class="link-lg"
                   asp-action="AssignedGrades">Classes</a>
            </li>
            <li class="breadcrumb-item active">
                <a class="link-lg"
                   asp-controller="Teacher"
                   asp-action="GradeDetails"
                   asp-route-id="@Model.GradeId">Class</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Student</li>
        </ol>
    </nav>

    <div class="page-wrapper">
        <h3>@Model.Name</h3>
        <hr />
        <div class="row">
            <h4>Tests taken</h4>
            @if (!Model.TestsTaken.Any())
            {
                <h6>No tests taken</h6>
            }
            else
            {
                <ol>
                    @foreach (var test in Model.TestsTaken)
                    {
                        <li>
                            <h6 class="dcb-badge d-inline">@test.TestName <strong>|</strong> Score: @test.Score% <strong>|</strong> Date: @test.Date</h6>
                        </li>
                    }
                </ol>
            }
        </div>
        <hr />
        <div>
            <dl class="row dcb-text">
                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Date Of Birth</dt>
                <dd class="col-sm-8">@Model.DateOfBirth</dd>

                <dt class="col-sm-4">Place Of Birth</dt>
                <dd class="col-sm-8">@Model.PlaceOfBirth</dd>

                <dt class="col-sm-4">MobilePhone</dt>
                <dd class="col-sm-8">@Model.MobilePhone)</dd>

                <dt class="col-sm-4">Telephone</dt>
                <dd class="col-sm-8">@Model.Telephone</dd>

                <dt class="col-sm-4">Father Name</dt>
                <dd class="col-sm-8">@Model.FatherName</dd>

                <dt class="col-sm-4">Mother Name</dt>
                <dd class="col-sm-8">@Model.MotherName</dd>

                <dt class="col-sm-4">Mother Mobile Number</dt>
                <dd class="col-sm-8">@Model.MotherMobileNumber</dd>

                <dt class="col-sm-4">Father Mobile Number)</dt>
                <dd class="col-sm-8">@Model.FatherMobileNumber)</dd>

                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@Model.Address</dd>
            </dl>
        </div>
        <hr />
        <div class="row text-center">
            <h4>Average score</h4>
            <h2 class="dcb-badge">@Model.AverageScore %</h2>
        </div>
        <hr />
        <div class="buttons-wrapper">
            <a asp-controller="Teacher"
               asp-action="GradeDetails"
               asp-route-id="@Model.GradeId"><i class="fas fa-lg fa-arrow-circle-left"></i></a>
        </div>
    </div>
</div>

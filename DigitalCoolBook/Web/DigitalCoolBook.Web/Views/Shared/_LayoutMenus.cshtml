<!doctype html>
<html lang="en">
@{
    Html.ValidationSummary();
}
<head>
    <meta charset="utf-8">
    <title>DigitalCoolBook</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/reset.map" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!--Script-->
    <script src="~/js/jquery.js"></script>
    <script src="~/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!----styling-->
    <style>
        @*Text color grey*@
        .DCB-text {
            color: darkslategray;
        }

        .my-info-text {
            border-style: solid;
            border-color: #aed581;
            border-width: 1px;
            border-radius: 4px;
        }

        .my-border {
            border-style: solid;
            border-width: 3px;
            border-color: #c5e1a5;
            border-radius: 9px;
            background-color: #aed581;
        }

        input[type="checkbox"] {
            display: inline-block;
            width: 21px;
            height: 21px;
            margin: -2px 10px 0 0;
            vertical-align: middle;
            cursor: pointer;
        }

            input[type="checkbox"]:checked + label span {
                /*background: url(check_radio_sheet.png) -19px top no-repeat;*/
            }

        input[type=number] {
            width: 80px;
            height: 30px;
        }
        /*#NAVBAR light-green lighten-2*/
        .navbar {
            background: #aed581;
        }
        /*FOOTER light-green lighten-2*/
        .footer {
            background: #aed581;
        }
        /*JUMBOTRON orange lighten-3*/
        .jumbotron {
            background: #ffcc80;
        }
        /*HR lighten-4*/
        hr.hr-orange {
            background: #ffb74d;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand text-info" href="#">Digital Cool Book</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container-fluid" id="navbarNavDropdown">
                <ul class="nav navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index">Начало <span class="sr-only">(current)</span></a>
                    </li>
                    @if (this.User.IsInRole("Teacher"))
                    {
                        <partial name="_PartialTeacherNav" />
                    }
                    else if (this.User.IsInRole("Admin"))
                    {
                        <partial name="_PartialAdminNav" />
                    }
                    else if (this.User.IsInRole("Student"))
                    {
                        <partial name="_PartialStudentNav" />
                    }

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            if (this.User.IsInRole("Admin"))
                            {
                                <form class="nav-item" asp-area="" asp-controller="Admin" asp-action="AdminPanel">
                                    <button class="btn btn-outline-primary btn-sm">Администраторски панел</button>
                                </form>
                            }
                            if (this.User.IsInRole("Student"))
                            {
                                <form class="nav-item" asp-area="" asp-controller="Student" asp-action="Panel">
                                    <button class="btn btn-outline-primary btn-sm">Профил</button>
                                </form>
                            }
                            if (this.User.IsInRole("Teacher"))
                            {
                                <form class="nav-item" asp-area="" asp-controller="Teacher" asp-action="Panel">
                                    <button class="btn btn-outline-primary btn-sm">Профил</button>
                                </form>
                            }
                            <form class="nav-item mt-1" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="btn btn-outline-secondary btn-sm">
                                    Отписване <span class="fa fa-user"></span>
                                </button>
                            </form>
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container ">
        @RenderBody()
    </div>
    <!--Footer-->
    <partial name="_PartialFooter" />
    <!-- Footer -->

    @RenderSection("Scripts", required: false)
    <!--Scripts-->
    <script src="~/js/jquery.form.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>
    <script src="~/js/ajax-form.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/gijgo.min.js"></script>
    <script src="~/js/jquery.simple.timer.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/mail-script.js"></script>
    <script src="~/js/jquery-ui.js"></script>

    <script src="~/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
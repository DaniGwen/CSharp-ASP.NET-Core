<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DigitalCoolBook</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/reset.map" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!--Script-->
    <script src="~/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!----styling-->
    <style>
        @*#NAVBAR light-green lighten-2*@
        .navbar {
            background: #aed581;
        }
        @*FOOTER light-green lighten-2*@
        .footer {
            background: #aed581;
        }
        @*JUMBOTRON orange accent-1*@
        .jumbotron {
            background: #ffd180;
        }
        @*HR lighten-4*@
        hr.hr-orange {
            background: #ffb74d;
        }
        @*Text color grey*@
        .DCB-text {
            color: darkslategray;
        }
    </style>

</head>
<body>
    <header>
        <!--navigation bar-->
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand text-info" href="#">Digital Cool Book</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container-fluid" id="navbarNavDropdown">
                <ul class="nav navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index">Начало <span class="sr-only">(current)</span></a>
                    </li>
                    @if (this.User.IsInRole("Teacher"))
                    {
                        <partial name="_PartialTeacherNav"/>
                    }
                    else if (this.User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Teacher/RegisterTeacher">Регистрация на Учител</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Student/RegisterStudent">Регистрация на Ученик</a>
                        </li>
                    }
                    else if (this.User.IsInRole("Student"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Меню</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Subject/Subjects">Предмети</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </li>
                    }

                </ul>
                <ul class="nav navbar-nav nav-right">
                    <li>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            if (this.User.IsInRole("Admin"))
                            {
                                <form class="nav-item" asp-area="" asp-controller="Admin" asp-action="AdminPanel">
                                    <button class="btn-outline-primary btn-sm">Администраторски панел</button>
                                </form>
                            }

                            if (this.User.IsInRole("Student"))
                            {
                                <form class="nav-item" asp-area="" asp-controller="Student" asp-action="Panel">
                                    <button class="btn btn-outline-primary btn-sm">Профил</button>
                                </form>
                            }

                            if (this.User.IsInRole("Teacher"))
                            {
                                <form class="nav-item" asp-area="" asp-controller="Teacher" asp-action="Panel">
                                    <button class="btn btn-outline-primary btn-sm">Профил</button>
                                </form>
                            }
                            <form class="nav-item mt-1" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="btn btn-outline-dark btn-sm"><span class="fa fa-user"></span>Отписване</button>
                            </form>
                        }
                        else if (!this.User.Identity.IsAuthenticated)
                        {
                            <a href="/Admin/LoginAdmin" class="btn btn-outline-secondary btn-sm">Вляз като Администратор <span class="fa fa-user"></span></a>
                        }
                    </li>
                </ul>
            </div>
        </nav>
        <div class="collapse navbar-collapse " id="navbarNavDropdown">

        </div>
    </header>
    <div class="container text-center mt-2">
        <div class="jumbotron">
            @if (!this.User.Identity.IsAuthenticated)
            {
                <div class="container-fluid ">
                    <br />
                    <div class="d-flex justify-content-center">
                        <div class="jumbotron-fluid">
                            <section>
                                <h1 style="border-bottom: 2px solid;border-left: 2px solid">Добре дошли в Digital Cool Book!</h1>
                                <span>Ученето може да бъде забавно!</span>
                            </section>
                            <div class="pt-4">
                                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Login">
                                    <span class="fa fa-user"></span> Вписване
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <h2 class="DCB-text">Добре дошъл @ViewData["UserName"]!</h2>
                    }
                    else
                    {
                        <h2 class="DCB-text">Добре дошъл в Digital Cool Book!</h2>
                    }
                </div>
            }
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer font-small pt-4">

        <!-- Footer Links -->
        <div class="container-fluid text-center text-md-left">

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-6 mt-md-0 mt-3">

                    <!-- Content -->
                    <h5 class="DCB-text">Контакти</h5>
                    <p>Телефон:</p>
                    <p>Адрес:</p>
                    <p>Пощенски код:</p>

                </div>

                <!-- Grid column -->
                <hr class="clearfix w-100 d-md-none pb-3">

                <!-- Grid column -->
                <div class="col-md-3 mb-md-0 mb-3">

                    <!-- Links -->
                    <h5 class="text-uppercase DCB-text">Друга информация</h5>

                    <ul class="list-unstyled">
                        <li>
                            <a href="#!">Link 1</a>
                        </li>
                        <li>
                            <a href="#!">Link 2</a>
                        </li>
                        <li>
                            <a href="#!">Link 3</a>
                        </li>
                    </ul>

                </div>
                <!-- Grid column -->
                <!-- Grid column -->
                <div class="col-md-3 mb-md-0 mb-3">

                    <!-- Links -->
                    <h5 class="text-uppercase DCB-text">Линкове</h5>

                    <ul class="list-unstyled">
                        <li>
                            <a href="#!">Link 1</a>
                        </li>
                        <li>
                            <a href="#!">Link 2</a>
                        </li>
                        <li>
                            <a href="#!">Link 3</a>
                        </li>
                    </ul>

                </div>
                <!-- Grid column -->

            </div>
            <!-- Grid row -->

        </div>
        <!-- Footer Links -->
        <!-- Copyright -->
        <div class="footer-copyright text-center">
            © 2020 Copyright:
            <a href="https://DigitalCoolBook.com/"> DigitalCoolBook.com</a>

        </div>
        <div class="text-center pb-3">
            <small>Idea by Pavlina Toteva</small>
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->

    @RenderSection("Scripts", required: false)
    <!--Scripts-->
    <script src="~/js/jquery.form.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>
    <script src="~/js/ajax-form.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/gijgo.min.js"></script>
    <script src="~/js/jquery.simple.timer.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/mail-script.js"></script>
    <script src="~/js/jquery-ui.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

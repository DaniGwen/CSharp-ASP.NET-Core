<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DigitalCoolBook</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />

    <!--Script-->
    <script src="~/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/main.js"></script>

</head>
<body>
    <header>
        <!--navigation bar-->
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand brand-text" href="#">Digital Cool Book</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container-fluid" id="navbarNavDropdown">
                <ul class="nav navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link index-button" href="/Home/Index">Home</a>
                    </li>
                    @if (this.User.IsInRole("Teacher"))
                    {
                        <partial name="_PartialTeacherNav" />
                    }
                    else if (this.User.IsInRole("Admin"))
                    {
                        <partial name="_PartialAdminNav" />
                    }
                    else if (this.User.IsInRole("Student"))
                    {
                        <partial name="_PartialStudentNav" />
                    }

                </ul>
                <ul class="nav navbar-nav nav-right">
                    <li>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <div class="row">
                                <div class="col">
                                    @if (this.User.IsInRole("Admin"))
                                    {
                                        <form class="nav-item" asp-area="" asp-controller="Admin" asp-action="AdminPanel">
                                            <button class="btn-outline-primary btn-sm">Admin panel</button>
                                        </form>
                                    }

                                    @if (this.User.IsInRole("Student"))
                                    {
                                        <form class="nav-item" asp-area="" asp-controller="Student" asp-action="Panel">
                                            <button class="btn btn-outline-primary btn-sm">My profile</button>
                                        </form>
                                    }

                                    @if (this.User.IsInRole("Teacher"))
                                    {
                                        <form class="nav-item" asp-area="" method="get" asp-controller="Teacher" asp-action="Panel">
                                            <button class="btn btn-outline-primary btn-sm">My profile</button>
                                        </form>
                                    }
                                </div>
                                <div class="col">
                                    <form class="nav-item" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <button type="submit" class="btn btn-outline-dark btn-sm"><span class="fa fa-user"></span>Sign out</button>
                                    </form>
                                </div>
                            </div>
                        }
                    </li>
                </ul>
            </div>
        </nav>
        <div class="collapse navbar-collapse " id="navbarNavDropdown"></div>
    </header>

    <main>
        <section class="jumbotron-container">
            <div class="jumbotron">
                <div class="text-center">
                    @if (!this.User.Identity.IsAuthenticated)
                    {
                        <div>
                            <h1 class="page-header">Welcome to Digital Cool Book!</h1>
                            <span>Learn more and have fun!</span>
                        </div>
                        <div class="pt-4">
                            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Login">
                                <span class="fa fa-user"></span> Login
                            </a>
                        </div>
                    }
                    else
                    {
                        <div><h2 class="DCB-text">Welcome @ViewData["UserName"]!</h2></div>
                    }
                </div>
            </div>
        </section>
        <section class="container">
            @RenderBody()
        </section>

        <!--Popup Dialog-->
        <div title="Active test" id="dialog"></div>
    </main>

    <!--Footer-->
    <partial name="_PartialFooter" />
    <!--Footer-->

    @RenderSection("Scripts", required: false)
    <!--Scripts-->
    <script src="~/js/jquery.form.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/ajax-form.js"></script>
    <script src="~/js/jquery.simple.timer.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>*@
</body>
</html>

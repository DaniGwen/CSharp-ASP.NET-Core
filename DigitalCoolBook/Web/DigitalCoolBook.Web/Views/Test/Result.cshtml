@{
    ViewData["Title"] = "EndTest";
    Layout = "~/Views/Shared/_LayoutMenus.cshtml";
    int result = (int)this.ViewData["Result"];
}

<style>
    h1 {
        font-size: 8em;
    }
</style>


<h2 class="text-center text-info">Резултат</h2>
<div class="container-fluid w-70">
    @if (result > 70)
    {
        <div class="text-center">
            <h1 class="font-weight-bold text-success ml-2">@result%</h1>
        </div>
        <p class="font-weight-bold text-success text-center mt-2">Теста е успешен</p>
    }
    else
    {
        <div class="text-center">
            <h1 class="font-weight-bold text-danger ml-2">@result%</h1>
        </div>
        <p class="font-weight-bold text-danger text-center mt-2">Теста е неуспешен!</p>
    }
    <div class="text-center mt-4">
        <small class="d-sm-block text-info">За успешен тест са нужни 70 или повече процента.</small>
    </div>
    <div class="d-flex justify-content-center mt-2 mb-3">
        <a class="btn btn-outline-primary" href="/Home/Index">към началната страница</a>
    </div>

</div>

@{
    ViewData["Title"] = "EndTest";
    Layout = "_Layout";
    var result = (int)this.ViewData["Result"];
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <h2 class="text-center">Result</h2>
    <div class="mt-3">
        @if (result > 70)
        {
            <div class="text-center">
                <h1 class="font-weight-bold text-success ms-2">@result%</h1>
            </div>
            <span class="text-success text-center mt-2"><strong class="d-block">Test passed!</strong></span>
        }
        else
        {
            <div class="text-center">
                <h1 class="font-weight-bold text-danger ms-2">@result%</h1>
            </div>
            <span class="text-danger text-center mt-2"><strong class="d-block">Test fail!</strong></span>
        }
        <div class="text-center mt-4">
            <small class="d-sm-block"><strong>70% or more score is needed to pass</strong></small>
        </div>
        <div class="d-flex justify-content-center mt-3 mb-3">
            <a asp-controller="Home"
               asp-action="Index"><i class="fas fa-check-circle"></i></a>
        </div>
    </div>
</div>


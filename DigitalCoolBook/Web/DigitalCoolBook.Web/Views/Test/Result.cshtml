@{
    ViewData["Title"] = "EndTest";
    Layout = "_Layout";
    var result = (int)this.ViewData["Result"];
}

<h2 class="text-center text-info">Result</h2>
<div class="container-fluid w-70">
    @if (result > 70)
    {
        <div class="text-center">
            <h1 class="font-weight-bold text-success ml-2">@result%</h1>
        </div>
        <p class="font-weight-bold text-success text-center mt-2">Test passed!</p>
    }
    else
    {
        <div class="text-center">
            <h1 class="font-weight-bold text-danger ml-2">@result%</h1>
        </div>
        <p class="font-weight-bold text-danger text-center mt-2">Test fail!</p>
    }
    <div class="text-center mt-4">
        <small class="d-sm-block text-info">70% or more score is needed to pass.</small>
    </div>
    <div class="d-flex justify-content-center mt-3 mb-3">
        <a class="btn btn-outline-primary btn-sm" href="/Home/Index">OK</a>
    </div>
</div>

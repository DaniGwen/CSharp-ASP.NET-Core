@model DigitalCoolBook.App.Models.TestviewModels.TestDetailsViewModel

@{
    ViewData["Title"] = "GetTestDetailsAsync";
    Layout = "_Layout";
    var indexQuestion = 1;
    var indexAnswer = 0;
    var letters = new string[] { "A", "B", "C", "D", "E", "F", "G", "H" };
}

<div class="container-fluid w-75">
    <h2 class="text-center">Test</h2>
    <br />
    <h3 class="text-center">@Model.TestName</h3>
    <hr />
    <div class="form-group">
        @foreach (var question in Model.Questions)
        {
            <h4 class="font-weight-bold mt-2 mb-3"><span class="mr-3 font-weight-bold">@indexQuestion.</span>@question.Title</h4>
            <ul class="list-group">
                @foreach (var answer in question.Answers)
                {
                    <li class="list-group-item">
                        <div class="row">
                            <label class="col-form-label">@letters[indexAnswer].</label><p class="ml-2 col-form-label">@answer.Title</p>
                        </div>
                    </li>

                    indexAnswer += 1;
                }
            </ul>

            indexQuestion += 1;
            indexAnswer = 0;
        }
    </div>
    <div class="d-flex justify-content-between">
        <a class="btn btn-outline-secondary btn-sm" href="/Test/TestsPreview">Back</a>
        <a class="btn btn-outline-warning btn-sm mb-2" href="/Test/EditTest/@Model.TestId">Edit</a>
    </div>
</div>

@model IEnumerable<DigitalCoolBook.App.Models.TestviewModels.TestsNamesViewModel>

@{
    ViewData["Title"] = "Tests";
    Layout = "_Layout";
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <div class="page-wrapper">
        <h3>Tests</h3>
        <hr />
        <a class="btn btn-success btn-sm mt-3" asp-action="CreateTest">Create test</a>
        @if (Model.Any())
        {
            @foreach (var test in Model)
            {
                <div class="row align-items-center mt-3">
                    <p class="col-form-label-lg col-md-8">@test.TestName</p>
                    <div class="col-md-3">
                        <div class="row">
                            <div class="col p-0">
                                @if (test.IsActive)
                                {
                                    <a class="btn btn-success btn-sm"
                                       asp-controller="Test"
                                       asp-action="StartTest"
                                       asp-route-id="@test.TestId">Active</a>
                                }
                                else
                                {
                                    <a class="btn btn-primary btn-sm"
                                       asp-controller="Test"
                                       asp-action="SetTestTimer"
                                       asp-route-testId="@test.TestId"><i class="fas fa-pencil-alt"></i> Configure Test</a>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h4 class="mt-5">No tests created...</h4>
        }
    </div>
    <div class="buttons-wrapper mt-4">
        <a asp-controller="Home"
           asp-action="Index"><i class="fas fa-lg fa-arrow-circle-left"></i></a>
    </div>
</div>


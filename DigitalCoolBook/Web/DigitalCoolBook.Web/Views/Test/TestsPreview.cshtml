@model IEnumerable<DigitalCoolBook.App.Models.TestviewModels.TestPreviewViewModel>

@{
    ViewData["Title"] = "TestsPreview";
    Layout = "_Layout";
}

<div class="container-fluid w-75">
    <h2 class="text-center">Tests</h2>
    <div class="form-group">
        <a class="btn btn-sm btn-outline-secondary" asp-action="CreateTestAdmin">Create new</a>
        <div class="col-form-label-lg">
            @Html.DisplayNameFor(model => model.TestName)
        </div>
        @foreach (var item in Model)
        {
            <div class="row form-group">
                <a class="btn btn-block btn-outline-info w-75 mr-1" href="/Test/GetTestDetails/@item.TestId">@item.TestName</a>
                <a class="btn btn-outline-danger btn-sm" id="@item.TestId" onclick="DeleteTest(this)">Delete</a>
            </div>
        }

        <a class="btn btn-outline-secondary" href="/Admin/AdminPanel">Back</a>
    </div>
</div>

@*Popup dialogs*@
<div id="popup"></div>
<div id="confirmdelete"></div>

@section Scripts{
    <script>
        // delete test
        function DeleteTest(elem) {
            // Sets the popup title
            $('#popup').dialog({ title: "Delete test" });

            $('#popup').dialog({
                modal: true,
                buttons: {
                    "Back": function () {
                        $(this).dialog('close');
                    },
                    // delete test
                    "Delete": function () {
                        $.post("/Test/DeleteTest",
                            { testId: $(elem).attr('id') },
                            function (message) {
                                $('#popup').dialog({
                                    modal: true,
                                    buttons: {
                                        "Ok": function () {
                                            $(this).dialog('close', location.href = location.href);
                                        }
                                    }
                                });
                                $('#popup').html(message);
                            });
                    }
                }
            });
        }
    </script>
}

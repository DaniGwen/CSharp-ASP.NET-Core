@model IEnumerable<DigitalCoolBook.Web.Models.TestviewModels.ActiveTestsViewModel>

@{
    Layout = "_Layout";
}

<div class="container-fluid w-75">
        <h3>Active tests</h3>
    <table class="table">
        <thead>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td class="text-center">
                        <label>No active tests...</label>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var activeTest in Model)
                {
                    <tr>
                        <td class="text-center">
                            <a class="btn btn-outline-info" asp-controller="Test"
                               asp-action="StartTest"
                               asp-route-testId="@activeTest.TestId">
                                @activeTest.TestName
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



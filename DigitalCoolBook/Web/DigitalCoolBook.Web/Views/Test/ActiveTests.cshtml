@model IEnumerable<DigitalCoolBook.Web.Models.TestviewModels.ActiveTestsViewModel>

@{
    Layout = "_Layout";
}

<div class="container-fluid w-75">
    <div class="col d-flex justify-content-center">
        <h2 class="col-sm-auto my-h2">Active tests</h2>
    </div>
    <table class="table">
        <thead>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td class="text-center">
                        <label>No active tests...</label>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <a class="btn btn-outline-info" href="/Test/StartTest/@item.TestId">@item.TestName</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



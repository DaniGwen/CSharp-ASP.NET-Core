@model DigitalCoolBook.App.Models.TestviewModels.TestStartViewModel

@{
    Layout = "_LayoutMenus";
    var index = 0;
}

<div class="container-fluid w-70">
    <div class="col text-center mt-4">
        <h3>@Model.TestName</h3>
    </div>
    @if (this.User.IsInRole("Student"))
    {
        <form id="form" asp-action="EndTest" method="post">
            <div class="row">
                <div class="col align-content-start">
                    <div>
                        @Html.DisplayNameFor(model => model.Date)
                    </div>
                    @Convert.ToString(string.Format("{0:dd/M/yyyy}", Model.Date))
                    <div>
                        <span class="digital-clock">00:00:00</span><span>ч.</span>
                    </div>
                </div>
                <div class="col d-flex justify-content-center">
                    <div class="row form-group text-right">
                        <span class="col-form-label">Оставащо време:</span>
                    </div>
                    <div class="row form-group mt-3">
                        <span class="timer col-form-label" data-minutes-left="@Model.Timer"></span>
                    </div>
                </div>
            </div>
            <div class="col">
                @foreach (var question in Model.Questions)
                {
                    <div class="col-form-label-lg mt-4">
                        <span name="questionCount">@question.Title</span>
                    </div>
                    <input type="hidden" name="[@index].questionId" value="@question.QuestionId" />

                    foreach (var answer in question.Answers)
                    {
                        <ul class="list-group">
                            <li class="list-group-item">
                                <input type="checkbox" name="[@index].answerId" value="@answer.AnswerId" />
                                <label class="col-form-label-lg">@answer.Title</label>
                            </li>
                        </ul>
                    }
                    index += 1;
                }
            </div>
            <div class="d-flex justify-content-center mt-4 mb-3">
                <input type="submit" value="Предай" class="btn btn-outline-danger" />
            </div>
        </form>
    }
    else
    {
        <section class="row d-flex justify-content-between">
            <div>
                <p>Добавени в теста:</p>
                <ol class="students-inroom">
                    @foreach (var studentName in Model.StudentNames)
                    {
                        <li>@studentName</li>
                    }
                </ol>
            </div>
            <div>
                <h2 class="text-success">Активен</h2>
                <div class="row-form-label-lg">
                    <label>Времетраене: @Model.Timer минути.</label>
                </div>
            </div>

        </section>
        <div class="row">
            <div class="connected-students" id="studentList"></div>
            <hr />
            <div class="disconnected-students" id="finishedLabel"></div>
        </div>
        <div class="text-center mb-2">
            <a class="btn btn-outline-danger" href="/Test/EndTestAllStudents/@Model.TestName">Край на теста</a>
        </div>
    }
</div>

<!--Script-->
<script src="~/js/test.js"></script>
<script src="~/js/jquery.simple.timer.js" type="text/javascript"></script>


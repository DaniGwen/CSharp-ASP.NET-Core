@model IEnumerable<DigitalCoolBook.Web.Models.TestviewModels.TestExpiredViewModel>
@{
    Layout = "_LayoutMenus";
}
<section class="section-testsHistory">
    <div class="container-fluid">
        <div class="col d-flex justify-content-center">
            <h2 class=" my-h2">История на тестове</h2>
        </div>
        <div class="d-flex justify-content-center">
            <table class="table-testsHistory">
                <thead>
                    <tr>
                        <th>Заглавие</th>
                        <th>Дата</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var test in Model)
                    {
                        <tr>
                            <td> <a href="/Test/TestRoomSummary/@test.ExpiredTestId">@test.ExpiredTestName</a></td>
                            <td><time>@test.ExpiredTestDate</time> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a class="back-button" href="/Home/Index">назад</a>
    </div>
</section>


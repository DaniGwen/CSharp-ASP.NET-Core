@model DigitalCoolBook.App.Models.GradeParaleloViewModels.ParaleloCreateViewModel

@{
    ViewData["Title"] = "CreateClass";
    Layout = "_Layout";
}

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12 mt-3">
    <div class="page-wrapper">
        <h3>Create grade</h3>
        <hr />
        <small class="text-light">Assign teacher to a class</small>
        <form class="mt-2" asp-action="CreateParalelo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select class="form-select select" name="Id">
                    <option selected>Select Teacher...</option>
                    @foreach (var teacher in Model.Teachers)
                    {
                        <option value="@teacher.Id">@teacher.Name</option>
                    }
                </select>
            </div>
            <div class="form-group mt-2">
                <select class="form-select select" name="GradeId">
                    <option selected>Select a class...</option>
                    @foreach (var grade in Model.Grades)
                    {
                        <option value="@grade.GradeId">@grade.Name</option>
                    }
                </select>
            </div>
        </form>
    </div>
    <div class="buttons-wrapper mt-4 mb-4">
        <a href="/Admin/EditParalelos"><i class="fas fa-lg fa-arrow-circle-left"></i></a>
        <input class="btn btn-success btn-sm" type="submit" value="Create" />
    </div>
</div>




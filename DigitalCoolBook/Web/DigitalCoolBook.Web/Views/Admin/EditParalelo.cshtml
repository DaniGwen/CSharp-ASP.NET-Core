@model DigitalCoolBook.App.Models.GradeParaleloViewModels.ParaleloCreateViewModel

@{
    ViewData["Title"] = "EditClass";
    Layout = "_LayoutMenus";
}

<h2>Edit class</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditParalelo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.GradeParaleloId)
            <div class="form-group">
                <label>Teacher</label>
                @Html.DropDownListFor(model => model.IdTeacher, new SelectList(Model.Teachers, "Id", "Name"), "Choose a teacher")
            </div>
            <div class="form-group">
                <label>Клас</label>
                @Html.DropDownListFor(model => model.IdGrade, new SelectList(Model.Grades, "GradeId", "Name"), "Choose a class")
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="EditParalelos">Back</a>
</div>


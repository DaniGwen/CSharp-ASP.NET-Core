@using DigitalCoolBook.App.Models;
@model LoginViewModel
@{
    ViewData["Title"] = "LoginAsync";
}

<div class="container-fluid  w-50">
    <section>
        <form asp-action="Login" method="post">
            <br />
            <h2 class="text-center">Вписване</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="Email">Имейл</label>
                <input asp-for="Email" class="form-control" placeholder="Имейл..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="Password">Парола</label>
                <input asp-for="Password" class="form-control" placeholder="Парола..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-50">Вписване</button>
            </div>
            <hr />
            <div class="form-group">
                <p>
                    <a href="/Home/Index">назад</a>
                </p>
                <p>
                    <a id="forgot-password" href="/Identity/Account/ForgotPassword">Забравена парола?</a>
                </p>
                <p>
                    <a href="/Admin/AdminContact">Свържи се с Администратор</a>
                </p>
            </div>
        </form>
    </section>
</div>


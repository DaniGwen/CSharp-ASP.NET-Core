@model DigitalCoolBook.App.Models.TestviewModels.SetTimerViewModel

@{
    ViewData["Title"] = "SetTestTimerAsync";
    Layout = "~/Views/Shared/_LayoutMenus.cshtml";
}

<div class="container-fluid">
    <h2>Задаване на таймер</h2>
    <hr />
    <form asp-action="SetTestTimer" method="post">
        <input hidden="hidden" asp-for="TestId" class="form-control" />
        <div class="form-group row">
            <label class="col-form-label-lg">@Model.TestName</label>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Времетраене</label>
            <input asp-for="Timer" id="timerinput" min="0" max="360" class="col-form-label-sm" />
            <small class="col-form-label-sm ml-1">минути.</small>
            <span class="text-danger" id="alertTimer"></span>
        </div>
        <div class="col form-group">
            <label class="mt-2">Паралелка</label>
           @*@Html.DropDownListFor(m => m.GradeId, new SelectList(Model.Grades, "GradeId", "Name"), "Изберете Клас..", new { @class = "form-control w-50" })*@
        </div>
        <div class="col form-control">
            <a class="mb-4">Ученици:</a>
            <div id="checkArray">
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Ок" class="btn btn-primary btn-block w-25" />
        </div>
    </form>
    <div>
        <a asp-action="Tests">Назад</a>
    </div>
</div>

<!--validate timer input-->
<script type="text/javascript">
    $('form').on('submit', function (event) {
        if ($('#timerinput').val() == 0) {
            $('#alertTimer').html("Задайте време.").fadeToggle(4000);
            event.preventDefault();
        }
    })
</script>

@model IEnumerable<DigitalCoolBook.App.Models.TestviewModels.TestPreviewViewModel>

@{
    ViewData["Title"] = "TestsPreview";
    Layout = "~/Views/Shared/_LayoutMenus.cshtml";
}

<h2>Тестове</h2>

<p>
    <a asp-action="CreateTestAdmin">Създай нов</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TestName)
                </td>
                <td>
                    @Html.ActionLink("Редактирай", "Edit", new { testId = item.TestId }) |
                    @Html.ActionLink("Детайли", "Details", new { testId = item.TestId }) |
                    @Html.ActionLink("Изтрии", "Delete", new { testId = item.TestId })
                </td>
            </tr>
        }
    </tbody>
</table>

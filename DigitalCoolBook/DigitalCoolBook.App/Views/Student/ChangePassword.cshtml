@model DigitalCoolBook.App.Models.StudentViewModels.StudentChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}
<div class="container-fluid">
    <h2>Смяна на парола</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ChangePassword">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row form-group">
                    <h3 class="mr-2">Име:</h3>
                    <h3>@Model.Name</h3>
                </div>
                <div class="row form-group">
                    <h3 class="mr-2">Имейл:</h3>
                    <h3>@Model.Email</h3>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Нова Парола</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Потвърждаване на Парола</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-group mx-auto">
                        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Назад</a>
                    </div>
                    <div class="form-group mx-auto">
                        <input type="submit" value="Запази" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>
@model DigitalCoolBook.App.Models.CategoryViewModels.CategoryAdminCreateViewModel

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "_LayoutMenus";
}

<h2>Създаване на Раздел</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="gj-font-size-16">Учебен Предмет</label>
                @Html.DropDownListFor(model => model.SubjectId, new SelectList(Model.Subjects, "SubjectId", "Name"), "Избери Предмет", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SubjectId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Заглавие</label>
                <input id="title" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" id="submit" class="btn btn-primary">Създай</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div id="successMessage"></div>
<div id="errorMessageDialog"></div>

<script type="text/javascript">
    $(function () {
        $("#submit").click(function () {
            $.ajax({
                url: "/Subject/CreateCategory/",
                type: "POST",
                data:
                {
                    SubjectId: $("#SubjectId").val(),
                    Title: $("#title").val(),
                },
                success: function () {
                    $("#successMessage").dialog(
                        {
                            resizable: false,
                            height: 200,
                            width: 300,
                            modal: true,
                            buttons: {
                                "Затвори": function () {
                                    window.location.href = "/Subject/AddLesson",
                                    $(this).dialog("close");
                                }
                            }
                        });
                    $("#successMessage").html("Темата е създадена!")
                },
                error: function (request, err, message) {
                    $("#errorMessageDialog").dialog({
                        maxHeight: 290,
                        width: 600,
                        modal: true,
                        buttons: {
                            "Затвори": function () {
                                $(this).dialog("close");
                            }
                        }
                    });
                    $("#errorMessage").html(request.responseText);
                    //$("#errorMessage").html("Потребителя не  може да бъде изтрит");
                }
            })
        })
    })
</script>
@model DigitalCoolBook.App.Models.CategoryViewModels.LessonEditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_SubjectDetailLayout.cshtml";
}

<h2>Редакция на @Model.Title</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Съдържание</label>
                <textarea asp-for="Content" class="form-control" style="width:700px" rows="10"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="row">Категория</label>
                @Html.DropDownListFor(model => model.Id, new SelectList(Model.Categories, "Id", "Title"), "Избери категория")
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Subjects">Назад</a>
</div>


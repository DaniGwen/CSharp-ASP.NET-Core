@*Submit form and display Popup*@
<script>
    $('form').on('submit', function (event) {

        // validation for title and contend
        if ($('#title').val() == '') {
            $('#alertTitle').html("Попълнете заглавието.").fadeToggle(4000);
            return false;
        }
        if ($('#content').val() == '') {
            $('#alertContent').html("Въведете съдържание.").fadeToggle(4000);
            return false;
        }

        event.preventDefault();

        var categoryId = $('#CategoryId').val();
        var title = $('#title').val();
        var content = $('#content').val();

        $.post("/Subject/AddLesson", { categoryId: categoryId, title: title, content: content }, function (message) {
            $('#successMessage').dialog({
                resizable: false,
                height: 200,
                width: 300,
                modal: true,
                buttons: {
                    "Ok": function () {
                        $(this).dialog('close', location.href = "/Subject/AddLesson");
                    },
                }
            })
            $('#successMessage').html(message);
        })
    })
</script>
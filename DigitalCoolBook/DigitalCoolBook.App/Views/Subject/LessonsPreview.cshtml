@model IEnumerable<DigitalCoolBook.App.Models.CategoryViewModels.LessonPreviewViewModel>

@{
    ViewData["Title"] = "LessonsPreview";
    Layout = "~/Views/Shared/_LayoutMenus.cshtml";
}

<div class="container-fluid w-75">
    <h3 class="text-center">Преглед на темите</h3>
    <p>
        <a asp-action="AddLesson" data-toggle="tooltip" title="Добави нова тема.">нова тема</a>
    </p>
    <div class="text-center mb-3">
        @Html.DisplayNameFor(model => model.Title)
    </div>
    @foreach (var item in Model)
    {
        <div class="row form-group">
            <a class="btn btn-outline-info btn-block w-75 form-group" id="lessonDetails">@item.Title</a>
            <div class="d-flex justify-content-end form-group ">
                <a class="btn btn-sm btn-outline-secondary ml-1" href="/Subject/EditLesson/@item.LessonId">Редактирай</a>
                <a class="btn btn-sm btn-outline-danger ml-1" onclick="Delete(this)" id="delete" value="@item.LessonId">Изтрии</a>
            </div>
        </div>
    }

    <a class="mb-1" href="/Admin/AdminPanel">Назад</a>
</div>

<div id="dialog"></div>

<script>
    // Open dialog and delete lesson on confirmation
    function Delete(elem) {
        debugger;
        $('#dialog').dialog({
            modal: true,
            width: 350,
            heigth: 250,
            buttons: {
                "назад": function () {
                    $(this).dialog('close');
                },
                "изтриване": function () {
                    $.post("/Subject/RemoveLesson", { lessonId: $(elem).attr('value') }, function (message) {
                        $('#dialog').dialog({
                            modal: true,
                            width: 350,
                            heigth: 250,
                            buttons: {
                                "Ok": function () {
                                    $(this).dialog('close', location.href = "/Subject/LessonsPreview");
                                }
                            }
                        })
                        $('#dialog').html(message);
                    })
                }
            }
        })
        $('#dialog').dialog({ title: "Изтриване" })
    }
</script>

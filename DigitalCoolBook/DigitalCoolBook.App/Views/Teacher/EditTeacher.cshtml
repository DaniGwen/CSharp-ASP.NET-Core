@model DigitalCoolBook.App.Models.TeacherViewModels.TeacherDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Редактиране на профил</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTeacher" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Имейл</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">Дата на раждане</label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfBirth" class="control-label">Място на раждане</label>
                <input asp-for="PlaceOfBirth" class="form-control" />
                <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
            </div>
            <label asp-for="Sex" class="control-label">Пол</label>
            <select class="form-control" name="sex" id="sex">
                <option value="Male">Мъж</option>
                <option value="Female">Жена</option>
                <option value="Other">Друго</option>
            </select>
            <div class="form-group">
                <label asp-for="MobilePhone" class="control-label">Мобилен телефон</label>
                <input asp-for="MobilePhone" class="form-control" type="tel" />
                <span asp-validation-for="MobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label">Домашен телефон</label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запамети" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EditTeachers">Назад</a>
</div>


@model IEnumerable<DigitalCoolBook.App.Models.GradesViewModels.GradesViewModel>

@{
    ViewData["Title"] = "ChooseParalelo";
}

<h1>Избери Клас</h1>

<p>
    <a asp-action="CreateParalelo">Създай нов</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Детайли", "GradeDetails", new { id = item.Id }) |
                </td>
            </tr>
        }
    </tbody>
</table>

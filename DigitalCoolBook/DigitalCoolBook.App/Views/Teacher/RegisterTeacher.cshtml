@model DigitalCoolBook.App.Models.TeacherRegisterModel

@{
    ViewData["Title"] = "RegisterTeacher";
}

<h1>Регистрация на Учител</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterTeacher">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" placeholder="Име..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Имейл</label>
                <input asp-for="Email" class="form-control" placeholder="Имейл..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">Дата на раждане</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" placeholder="Дата на раждане..." />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfBirth" class="control-label">Място на раждане</label>
                <input asp-for="PlaceOfBirth" class="form-control" placeholder="Място на раждане..." />
                <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-weight-bold">Пол</label>
                <select id="sex" class="form-control">
                    <option selected>Избери...</option>
                    <option>Мъж</option>
                    <option>Жена</option>
                    <option>Друго</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MobilePhone" class="control-label">Мобилен номер</label>
                <input asp-for="MobilePhone" class="form-control" placeholder="Мобилен номер..." />
                <span asp-validation-for="MobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Username..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label">Телефон</label>
                <input asp-for="Telephone" class="form-control" placeholder="Телефон..." />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Парола</label>
                <input asp-for="Password" class="form-control" placeholder="Парола..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="ConfirmPassword">Потвърди парола</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password..." />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>


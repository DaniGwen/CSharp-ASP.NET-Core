@model IEnumerable<DigitalCoolBook.App.Models.GradesViewModels.GradeViewModel>

@{
    ViewData["Title"] = "ChooseParalelo";
}

<h1>Класове</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="btn btn-sm btn-secondary text-white">
                   @Html.ActionLink("Детайли", "GradeDetails", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

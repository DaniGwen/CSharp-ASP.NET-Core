@using DigitalCoolBook.App.Areas.Identity.Pages.Account

@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

@if (!this.User.Identity.IsAuthenticated)
{
    <div class="container-fluid ">
        <br />
        <div class="d-flex justify-content-center">
            <div>
                <h1>Добре дошли в Digital Cool Book!</h1>
                <div>
                    <h5>
                        <a style="background-color:#441dde" asp-controller="Home" asp-action="Login" type="button" class="btn btn-primary">
                            Вписване
                        </a>
                    </h5>
                </div>
                <div>
                    <h5>
                        <a style="background-color:#6e40dd" asp-controller="Admin" asp-action="AdminContact" type="button" class="btn btn-primary">
                            Свързване с администратор
                        </a>
                    </h5>
                </div>
            </div>
        </div>
    </div>
}
else
{
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <h2>Добре дошъл @ViewData["UserName"]!</h2>
    }
    else
    {
        <h2>Добре дошъл в DigitalCoolBook!</h2>
    }
</div>
}

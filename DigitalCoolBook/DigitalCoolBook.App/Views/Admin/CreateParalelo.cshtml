@model DigitalCoolBook.App.Models.GradeParaleloViewModels.ParaleloCreateViewModel

@{
    ViewData["Title"] = "CreateParalelo";
}

<h2>Създаване на Клас</h2>

<hr />
<div class="row">
    <div class="col-md-4 form-group">
        <form asp-action="CreateParalelo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3>Учител</h3>
                <div class="dropdown">
                    @Html.DropDownListFor(model => model.IdTeacher, new SelectList(Model.Teachers, "Id", "Name"), "Избери Учител")
                </div>
            </div>
            <div class="form-group">
                <h3>Клас</h3>
                <div class="dropdown">
                    @Html.DropDownListFor(model => model.IdGrade, new SelectList(Model.Grades, "GradeId", "Name"), "Избери Клас")
                </div>
            </div>
            <div class="row form-group">
                <div class="mx-auto">
                    <a href="/Admin/Paralelos">Назад</a>
                </div>
                <div class="mx-auto">
                    <input type="submit" value="Създай" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>




@model DigitalCoolBook.App.Models.LoginAdminViewModel

@{
    ViewData["Title"] = "LoginAdmin";
    Layout = "_LayoutMenus";
}

<div class="container-fluid  w-50">
    <section>
        <form id="account" method="post">
            <br />
            <h2 class="text-center">Вписване</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="Username">Потребителско име</label>
                <input asp-for="Username" class="form-control" placeholder="Потребитеско име..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="Password">Парола</label>
                <input asp-for="Password" class="form-control" placeholder="Парола..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayName("Запомни ме")
                    </label>
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-50">вписване</button>
            </div>
            <hr />
            <div class="form-group">
                <p>
                    <a href="/Home/Index">назад</a>
                </p>
                <p>
                    <a id="forgot-password" href="/Identity/Account/ForgotPassword">Забравена парола?</a>
                </p>
            </div>
        </form>
    </section>
</div>
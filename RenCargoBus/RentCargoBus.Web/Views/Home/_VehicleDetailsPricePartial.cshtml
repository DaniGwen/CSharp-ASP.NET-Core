            <span class="vehicle-details__price--normal">@Model.HirePriceMonth &euro;</span>
        </section>
        <section>
            <label>@Localizer["Deposit"]</label>
            <span class="vehicle-details__price--small">@Model.DepositEu &euro;</span>

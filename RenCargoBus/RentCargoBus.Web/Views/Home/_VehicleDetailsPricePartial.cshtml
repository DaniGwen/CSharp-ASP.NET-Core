                <label>@Localizer["Delivery"]</label>
                <span class="vehicle-details__price--small">@Model.DeliveryEu &euro;</span>
            </div>
        </sectionclass>
        <section>
            <p class="text-success">@Localizer["A 6 мonth plan is available. Contact us for more information"].</p>
        </section>

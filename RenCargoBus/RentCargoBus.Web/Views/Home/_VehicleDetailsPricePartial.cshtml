<div class="vehicle-details__item vehicle-details__price">
    <label class="vehicle-details__price__availability">@Localizer["Prices"] Bulgaria</label>
    <article class="vehicle-details__item vehicle-details__price__info">
        <section>
            <label>@Localizer["Price per day"]</label>
            <span>@Model.HirePrice &euro;</span>
        </section>
        <section>
            <label>@Localizer["Deposit"]</label>
            <span>@Model.DepositBg &euro;</span>
        </section>
        <section class="vehicle-details__item__delivery">
            <small>@Localizer["Optional"]:</small>
            <div>
                <label>@Localizer["Delivery"]</label>
                <span>@Model.DeliveryBg &euro;</span>
            </div>
        </section>
    </article>
</div>

<div class="vehicle-details__item vehicle-details__price">

@page
@model RentCargoBus.Web.Areas.Identity.Pages.Account.Manage.AddCarModel
@{
    ViewData["Title"] = "Add Car";
}

<section class="c-admin">
    <h2>Add new car</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Input.Brand"></label>
            <input asp-for="Input.Brand" placeholder="Марка" class="form-control form-control-sm" autofocus />
            <span asp-validation-for="Input.Brand" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Model"></label>
            <input asp-for="Input.Model" value="" placeholder="Модел" class="form-control form-control-sm" />
            <span asp-validation-for="Input.Model" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.PlateNumber"></label>
            <input asp-for="Input.PlateNumber" value="" placeholder="Регистрационен номер" class="form-control form-control-sm" />
            <span asp-validation-for="Input.PlateNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.MilesPerGallon"></label>
            <input asp-for="Input.MilesPerGallon" type="number" placeholder="Разход" class="form-control form-control-sm" />
            <span asp-validation-for="Input.MilesPerGallon" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Doors"></label>
            <input asp-for="Input.Doors" type="number" placeholder="Брой врати" class="form-control form-control-sm" />
            <span asp-validation-for="Input.Doors" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Deposit"></label>
            <input asp-for="Input.Deposit" type="number" placeholder="Гаранционен депозит в евро за BG" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Input.DepositEu"></label>
            <input asp-for="Input.DepositEu" type="number" placeholder="Гаранционен депозит в евро за EU" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Input.HirePrice"></label>
            <input asp-for="Input.HirePrice" type="number" placeholder="Цена за ден" class="form-control form-control-sm" />
            <span asp-validation-for="Input.HirePrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.HirePriceMonth"></label>
            <input asp-for="Input.HirePriceMonth" type="number" placeholder="Цена за месец" class="form-control form-control-sm" />
            <span asp-validation-for="Input.HirePriceMonth" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Images">Select images:</label>
            <input asp-for="Input.Images" type="file" multiple><br><br>
        </div>

        <button type="submit" class="btn btn-outline-info">Save</button>
    </form>
</section>

@page
@model RentAVan.Web.Areas.Identity.Pages.Account.Manage.ChangePhoneAndEmailModel
@{
    ViewData["Title"] = "My contact Phone and Email";
}
<section class="c-admin">
    <h2>@ViewData["Title"]</h2>
    <small>Промяна на видимите за потребителите телефон и имейл.</small>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <hr />
    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control form-control-sm" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control form-control-sm" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <hr />
        <button type="submit" class="btn btn-outline-info">Save</button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
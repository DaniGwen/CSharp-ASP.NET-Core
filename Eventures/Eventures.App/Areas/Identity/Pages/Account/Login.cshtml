@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center mt-3">Login</h1>
<form method="post" class="w-45 mx-auto">
    <hr class="mt-3 bg-eventures hr-2 w-50" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-flex justify-content-center">
        <div class="form-group w-50">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Username " class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Username" class="form-control" type="text" placeholder="Username..." />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Password" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password..." />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <hr class="hr-2 bg-eventures mt-3" />
            <div class="form-group mt-1">
                <div class="checkbox d-flex justify-content-center">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <hr class="hr-2 bg-eventures" />
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn bg-eventures">login</button>
    </div>
    <div id="navigation-links" class="d-flex justify-content-center mt-3">
        <div class="d-flex flex-column">
            <a href="#">Forgot your password?</a>
            <a class="mt-2" href="/Identity/Account/Register">Register as a new user</a>
        </div>
    </div>
</form>


@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h1 class="text-center mt-3">Register</h1>
<hr class="mt-3 bg-eventures hr-2 w-50" />
<form method="post" class="w-50 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Username " class="font-weight-bold"></label>
        <input asp-for="Input.Username" class="form-control" type="text" placeholder="Username..." />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Email" class="font-weight-bold"></label>
        <input asp-for="Input.Email" class="form-control" type="text" placeholder="Email..."/>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password" class="font-weight-bold"></label>
        <input asp-for="Input.Password" class="form-control" placeholder="Password..." type="password"/>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword" class="font-weight-bold"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password..." />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
}

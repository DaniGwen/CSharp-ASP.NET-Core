@model List<Eventures.App.Models.ViewModels.EventAllViewModel>

@{
    ViewData["Title"] = "View";
}

<h1 class="text-center">All Events</h1>
<hr class="bg-eventures hr-2" />
<table class="table">
    <thead>
        <tr>
            <th class="font-weight-bold">#</th>
            <th class="font-weight-bold">Name</th>
            <th class="font-weight-bold">Start</th>
            <th class="font-weight-bold">End</th>
            <th class="font-weight-bold">Place</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Start</td>
                <td>@Model[i].End</td>
                <td>@Model[i].Place</td>
            </tr>
        }
    </tbody>
</table>
<hr class="bg-eventures hr-2" />
